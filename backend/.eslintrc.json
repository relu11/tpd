{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      1,
      { "varsIgnorePattern": "_|express", "argsIgnorePattern": "_" }
    ],
    "semi": "off",
    "no-console": "off",
    "no-multiple-empty-lines": "warn",
    "comma-dangle": [0],
    "arrow-parens": [0],
    "object-curly-spacing": ["warn", "always"],
    "array-bracket-spacing": ["warn", "always"],
    "import/prefer-default-export": [0],
    "class-methods-use-this": "off",
    "prefer-destructuring": "off",
    "quotes": "off",
    "operator-linebreak": "off"
  }
}
